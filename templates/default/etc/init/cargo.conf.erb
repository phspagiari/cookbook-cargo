start on runlevel [2345]
stop on starting rc RUNLEVEL=[016]

setuid <%= @user %>
setgid <%= @group %>

respawn

console log
chdir <%= @home %>

exec /go/bin/gitreceived \
        -p <%= @port %> \
        -k <%= @home %>/keys \
        -r <%= @home %>/repositories \
        <%= @home %>/.ssh/id_rsa \
        "/go/bin/cargo -bucket <%= @bucket %> -d <%= @base_domain %> -aws-key <%= @aws_key %> -aws-secret <%= @aws_secret %>